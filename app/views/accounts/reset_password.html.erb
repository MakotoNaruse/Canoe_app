<div class = "header">
  <div class = "header-logo">
    <%= link_to("大会管理システム", "/operations/top") %>
  </div>
  <div class = "header-menus">
    <%= @current_op.name %> でログイン中　　　　<%= link_to("ログアウト", "/operations/logout", method: :post) %> <br>
  </div>
</div>
<% if flash[:notice] %>
  <div class="flash" >
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="main">
  <h2>リセット用パスワード</h2>
  大学名：<%= @university.u_name %><br>
  該当大学にメール等で送付してください。<br>
  <input id="copyTarget" type="text" value="<%= @reset_url %>" readonly>
  <button onclick="copyToClipboard()">URLをコピーする</button>
  <br>
  <br>
  <%= link_to("アカウント管理へ戻る", "/operations/accounts/index" ) %>
  <br><br>
  <%= link_to("管理ページトップへ戻る", "/operations/top") %>
</div>
<script>
  function copyToClipboard() {
    var copyTarget = document.getElementById("copyTarget");
    copyTarget.select();
    document.execCommand("Copy");
    alert("コピーしました！ : " + copyTarget.value);
  }
</script>
