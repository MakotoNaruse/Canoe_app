      <input type="submit" value="変更する" >
    <% end %>
  <% end %>
  <% if @tour == 3 %>
    <%= form_tag("/operations/entry_time/change") do %>
      エントリー開始 <br>
      <input type="text" name="start_mounth" style="width:20px;" value="<%= @op.find(10).command %>"/>月
