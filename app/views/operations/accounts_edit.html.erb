<div class = "header">
  <div class = "header-logo">
    <%= link_to("大会管理システム", "/operations/top") %>
  </div>
  <div class = "header-menus">
    <%= @current_op.name %> でログイン中　　　　<%= link_to("ログアウト", "/operations/logout", method: :post) %> <br>
  </div>
</div>
<% if flash[:notice] %>
  <div class="flash" >
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="main">
<h2>アカウント管理</h2>

<h3>アカウント情報変更</h3>

<%= form_tag("/operations/accounts/update/#{@university.id}") do %>
大学名：
<input type="text" name="u_name" value="<%= @university.u_name %>"/>
<br/><br>
読みがな：
<input type="text" name="read" value="<%= @university.read %>"/>
<br/><br>
エリア：
<input type="radio" name="erea" value="関西" <% if @university.erea == "関西" %> checked <% end %> > 関西
<input type="radio" name="erea" value="関東" <% if @university.erea == "関東" %> checked <% end %> > 関東
<br/><br>
パスワード：
<input type="text" name="password" value="<%= @university.password %>"/>
<br/><br>
<input type="submit" value="変更"/>
<% end %>
<br>
<%= link_to("アカウント管理へ戻る", "/operations/accounts/index" ) %>
<br><br>
<%= link_to("管理ページトップへ戻る", "/operations/top") %>
</div>
